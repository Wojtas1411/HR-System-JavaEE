<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/MySQLDS</jta-data-source>
        <class>entities.StaffCategoryEntity</class>
        <class>entities.AdresEntity</class>
        <class>entities.EmailsEntity</class>
        <class>entities.EngagementEntity</class>
        <class>entities.JobDataEntity</class>
        <class>entities.MembershipEntity</class>
        <class>entities.PersonalDataEntity</class>
        <class>entities.PhoneNumbersEntity</class>
        <class>entities.TemporaryPersonalDataEntity</class>
        <class>entities.UnitsEntity</class>
        <class>entities.UserEntity</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://10.5.0.3:3306/javaee"/>
            <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://10.5.0.3:3306/javaee"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://10.5.0.3:3306/javaee"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://10.5.0.3:3306/javaee"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>

</persistence>
